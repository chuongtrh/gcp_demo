{
  "name": "gcp_demo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "postinstall": "run-p install:server",
    "install:server": "cd server && npm install",
    "start:local": "run-p start:server",
    "start:server": "npm run start:local --prefix server",
    "prestart:docker": "docker build -t gcp-demo -f docker/server.local.dockerfile --no-cache .",
    "start:docker": "docker run --rm -it -p 4300:4300/tcp gcp-demo:latest",
    "deploy:dev": "gcloud builds submit --config appservice_cloudbuild.yaml .",
    "deploy:cloudrun": "gcloud builds submit --config cloudrun_cloudbuild.yaml ."

  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chuongtrh/gcp_demo/issues"
  },
  "homepage": "https://github.com/chuongtrh/gcp_demo#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
