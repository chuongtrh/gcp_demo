{
  "name": "gcp_demo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "postinstall": "run-p install:server",
    "install:server": "cd server && npm install",
    "poststart:local": "opn http://localhost:4300/version",
    "start:local": "run-p start:server",
    "start:server": "npm run start:local --prefix server",
    "prestart:docker": "docker build -t gcp-demo -f docker/server.dev.dockerfile --no-cache .",
    "start:docker": "docker run --rm -it -p 4300:4300/tcp gcp-demo:latest",
    "poststart:docker": "opn http://localhost:4300/version",
    "predeploy:dev": "cp .version server",
    "deploy:dev": "gcloud builds submit --config cloudbuild.yaml ."
  },
  "author": "",
